pipeline {
  agent {
    label 'maven'
  }
  environment {
    FOO = "BAR"
  }
  stages {
    stage('Clone repository') {
      steps {
        echo 'Checkout'
      }
    }
    stage('Build application') {
      steps {
        dir ('openshift/skeletor') {
          echo 'Build'
          sh 'pwd'
          sh './gradlew build'
        }
      }
    }
    stage('Test application') {
      steps {
        dir ('openshift/skeletor') {
          echo 'Test'
          sh 'pwd'
          sh './gradlew test'
        }
      }
    }
    stage('Build docker image') {
      agent docker
      steps {
        dir ('openshift/skeletor') {
          echo 'Docker Build'
          sh 'pwd'
          sh 'docker build -t skeletor'
        }
      }
    }
    stage('Deploy application') {
      steps {
        dir ('openshift/skeletor') {
          echo 'Deploy'
          sh 'pwd'
          sh 'oc apply -f openshift'
        }
      }
    }
  }
  post {
    always {
      echo 'Bye bye'
    }
  }
}
