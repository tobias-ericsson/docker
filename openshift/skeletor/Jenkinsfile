pipeline {
  agent any
  dir ('openshift/skeletor') {
    stages {
      stage('Clone repository') {
        steps {
          echo 'Checkout'
          checkout scm
        }
      }
      stage('Build application') {
        steps {
          echo 'Build'
          sh 'pwd'
          sh './gradlew build'
        }
      }
      stage('Test application') {
        steps {
          echo 'Test'
          sh 'pwd'
          sh './gradlew test'
        }
      }
    }
  }
  post {
    always {
      echo 'Bye bye'
    }
  }
}
